<div id="conta" class="row">
    <div class="resume">
        <header class="page-header" style="margin-top: 10px; text-align: left;">
            <button id="back-inst" class="btn btn-conta"><i class="glyphicon glyphicon-circle-arrow-left"></i> Voltar Atrás</button>          
        </header>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading resume-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-xs-12 col-sm-4">
                                    <figure>
                                        <img class="img-circle img-responsive" alt="photo" src="{{foto}}">
                                    </figure>                                
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <ul class="list-group">
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-modal-window"></i> <br> <b>Número de Conta:</b> {{acc_n}} <br> <b>Número do Cliente:</b> {{cust_n}} </li>
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-user"></i> <br> <b>Nome do Cliente:</b> {{nome}} </li>
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-info-sign"></i> <br> <b>Tipo de Conta:</b> {{tipo_conta}}  </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bs-callout bs-callout-conta">
                        <h4>Localização</h4>
                        <p><b>Região:</b> {{regiao}} </p>
                        <p><b>Província:</b> {{provincia}} </p>
                        <p><b>Distrito:</b> {{distrito}} </p>
                        <p><b>Cidade:</b> {{cidade}} </p>
                        <p><b>Localidade:</b> {{localidade}} </p>
                        <p><b>Bairro:</b> {{bairro}} </p>
                        <p><b>Endereço:</b> {{endereco}} {{cod_post}} </p>
                    </div>
                    <div class="bs-callout bs-callout-conta">
                        <h4>Produtos</h4>                                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>