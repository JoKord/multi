<div id="conta" class="row">
    <div class="resume">
        <header class="page-header" style="margin-top: 10px; text-align: left;">
            <button id="back-inst" class="btn btn-conta"><i class="glyphicon glyphicon-circle-arrow-left"></i> Voltar </button>          
        </header>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                <div class="panel panel-warning">
                    <div class="panel-heading resume-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-xs-12 col-sm-4" style="text-align:center;">
                                    <figure>
                                        <img id="photo-container" class="img-circle img-responsive" width="200" height="200" alt="photo" src="{{foto}}">
                                    </figure>                                                               
                                {{#if user "AddPhotos"}}
                                <form target="_blank" enctype="multipart/form-data" method="post" id="photo-submit" action="lib/upload/chImage.php" style="margin-top:5px;">
                                    <input type="file" id="file-upload" name="file">
                                        <label for="file-upload" class="btn btn-black">
                                            <i class="glyphicon glyphicon-upload"></i>  Alterar Foto
                                        <input name="id" value="{{cust_n}}" type="hidden">
                                        <input name="type" value="clientes" type="hidden">
                                    </label>
                                </form>                                    
                                {{/if}} 
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <ul class="list-group">
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-modal-window"></i> <br> <b>Número de Conta:</b> {{acc_n}} <br> <b>Número do Cliente:</b> {{cust_n}} </li>
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-user"></i> <br> <b>Nome do Cliente:</b> {{nome}} </li>
                                        <li class="list-group-item"><i class="contas-colorify glyphicon glyphicon-info-sign"></i> <br> <b>Tipo de Conta:</b> {{tipo_conta}}  </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>                 
                    <div class="bs-callout bs-callout-conta">
                        <h4>Produtos</h4>
                    {{#each produtos}}
                        <hr>
                        <p><b>Estado:</b> <span class="acc acc_{{toLowerCase status}}"> {{toUpperCase status}} </p>
                        <p><b>Grupo de Produtos:</b> {{grupo}} </p>
                        <p><b>Psnr:</b> {{psnr}} </p>
                        <p><b>Cód. Produto</b> {{p_code}} </p>
                        <p><b>Modelo do Decoder:</b> {{d_model}} </p>
                        <p><b>Número do Decoder:</b> {{d_number}} </p>
                        <p><b>Modelo do SmartCard:</b> {{s_model}} </p>
                        <p><b>Número do SmartCard:</b> {{s_number}} </p>
                        <p><b>Método de Pagamento:</b> {{pay}} </p>
                        <p><b>Datas:</b></p>
                        <ul>
                            <li><b>Início do Produto:</b> {{st_dt}}</li>
                            <li><b>Última Disconecção:</b> {{dis_dt}}</li>
                            <li><b>Última Reconecção:</b> {{rec_dt}}</li>
                            <li><b>Próximo Pagemento:</b> {{inv_dt}}</li>
                        </ul>
                    {{/each}}
                    </div>
                    <div class="bs-callout bs-callout-conta">
                        <h4>Localização</h4>
                        <p><b>Região:</b> {{regiao}} </p>
                        <p><b>Província:</b> {{provincia}} </p>
                        <p><b>Distrito:</b> {{distrito}} </p>
                        <p><b>Cidade:</b> {{cidade}} </p>
                        <p><b>Localidade:</b> {{localidade}} </p>
                        <p><b>Bairro:</b> {{bairro}} </p>
                        <p><b>Endereço:</b> {{endereco}} {{cod_post}} </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>