<div id="cvd" class="row">
    <div class="resume">
        <header class="page-header" style="margin-top: 10px; text-align: left;">
            <button id="back-cvd" class="btn btn-cvd"><i class="glyphicon glyphicon-circle-arrow-left"></i> Voltar </button>          
        </header>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-offset-1 col-md-10 col-lg-offset-2 col-lg-8">
                <div class="panel panel-danger">
                    <div class="panel-heading resume-heading">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="col-xs-12 col-sm-4" style="text-align:center;">
                                    <figure>
                                        <img id="photo-container" class="img-circle img-responsive" alt="photo" src="{{foto}}">
                                    </figure>
                                {{#if user "AddPhotos"}}
                                <form target="_blank" enctype="multipart/form-data" method="post" id="photo-submit" action="lib/upload/chImage.php" style="margin-top:5px;">
                                    <input type="file" id="file-upload" name="file">
                                        <label for="file-upload" class="btn btn-black">
                                            <i class="glyphicon glyphicon-upload"></i>  Alterar Foto
                                        <input name="id" value="{{id}}" type="hidden">
                                        <input name="type" value="canaisvendas" type="hidden">
                                    </label>
                                </form>                                    
                                {{/if}}                                 
                                </div>
                                <div class="col-xs-12 col-sm-8">
                                    <ul class="list-group">
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-modal-window"></i> {{id}} </li>
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-user"></i>  {{fullname}} </li>
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-info-sign"></i>  {{marca}} </li>
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-certificate"></i>  {{subtipo}} </li>
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-phone"></i>  {{contacto}} </li>
                                        <li class="list-group-item"><i class="cvd-colorify glyphicon glyphicon-envelope"></i>  {{email}} </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bs-callout bs-callout-cvd">
                        <h4>Previsão de Vendas - {{fullname}}</h4>
                        <div id="previsao-graph" style="display: block; margin: 0 auto;"></div>
                    </div>
                    <div class="bs-callout bs-callout-cvd">
                        <h4>Produtos Vendidos - {{fullname}}</h4>
                        <div id="n-vendas" style="display: block; margin: 0 auto;"></div>
                        <div id="v-vendas" style="display: block; margin: 0 auto;"></div>
                    </div>
                    <div class="bs-callout bs-callout-cvd">
                        <h4>Localização</h4>
                        <p><b>Província:</b> {{provincia}} </p>
                        <p><b>Distrito:</b> {{distrito}} </p>
                        <p><b>Cidade:</b> {{cidade}} </p>
                        <p><b>Localidade:</b> {{localidade}} </p>
                        <p><b>Bairro:</b> {{bairro}} </p>
                        <p><b>Endereço:</b> {{endereco}} </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>